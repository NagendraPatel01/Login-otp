<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtpActivity"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify +91 99746"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:textSize="20dp"
        android:layout_gravity="center"></TextView>


    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting to Automatically detect an SMS sent to"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="15dp"
        android:layout_gravity="center"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="91+"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_marginLeft="60dp"></TextView>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wrong no?"
            android:textColor="#000"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"></TextView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

        <EditText
            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter OTP"
            android:textColor="#000"
            android:backgroundTint="#FFF"
            android:gravity="center">

        </EditText>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#4CAF50"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"></View>
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter 6-digit code."
        android:textColor="#000"
        android:textSize="15dp"

        android:layout_gravity="center"></TextView>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="resend"
        android:textColor="#000"
        android:textSize="20sp"
        android:id="@+id/resend"/>


    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="#4CAF50"
        android:text="next"
        android:textColor="#fff"
        android:textSize="20dp">

    </Button>



</LinearLayout>